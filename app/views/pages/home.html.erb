<%= content_for :head do %>
<meta property="og:title" content="Let's join together and help Laurie">
<meta property="og:image" content="http://heartlaurie.com/assets/laurie1.jpg">
<meta property="og:site_name" content="We Heart Laurie">
<meta property="og:description" content="<%= short_info %>">
<meta property="og:url" content="<%= request.url %>">
<% end %>
<%= render 'layouts/below_header' %>
<div class="mainContent">
	<div class="images">
		<div class="imagesContainer" id="cycle">
			<%= image_tag '/assets/laurie1.jpg' %>
			<%= image_tag '/assets/laurie2.jpg' %>
			<%= image_tag '/assets/laurie3.jpg' %>
			<%= image_tag '/assets/laurie4.jpg' %>
			<%= image_tag '/assets/laurie5.jpg' %>
		</div>
	</div>
	<div class="mainContentRight">
		<div class="shortInfo">
			<%= short_info %>
			<div class="readMore">
				<%= link_to 'Read more...', about_path %>
			</div>
		</div>
	</div>
	<div class="donateButton">
		<%= render 'shared/donate_button' %>
	</div>
	<div class="clear"></div>
	<%= render 'shared/help' %>
</div>
<div class="commentForm">
	<%= render 'comments/comment_form' %>
</div>